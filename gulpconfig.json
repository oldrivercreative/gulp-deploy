{
  "stylesheets": [
    "resources/scss/**/*.scss > public/css"
  ],
  "scripts": [
    "resources/js/entry.js > public/js/bundle.js"
  ],
  "copy": [
    "node_modules/jquery/src/jquery.js > public/js"
  ],
  "deploy": {
    "development": {
      "src": [
        "public/**"
      ],
      "dest": "/public_html",
      "type": "sftp",
      "connect": {
        "host": "example.com",
        "port": 22,
        "user": "username",
        "pass": "password"
      }
    },
    "production": {
      "src": [
        "public/**"
      ],
      "dest": "/public_html",
      "type": "ftp",
      "connect": {
        "host": "example.com",
        "port": 21,
        "secure": true,
        "user": "username",
        "pass": "password"
      }
    }
  }
}
